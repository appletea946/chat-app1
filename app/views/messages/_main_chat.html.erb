<div class="main-chat">
  <div class="chat-header">
    <div class="left-header">
      <div class="current-room">testname</div>
    </div>
    <div class="right-header">
      <div class="destroy-room">
        <a href="#">チャットを終了する</a>
      </div>
    </div>
  </div>
  <div class="messages">
    <div class="message">
      <div class="upper-message">
        <div class="name">Tom</div>
        <div class="date">2020/2/23(Wed) 12:43:24</div>
      </div>
      <div class="lower-message">
        <div class="text">おはよう</div>
      </div>
    </div>
    <div class="message">
      <div class="upper-message">
        <div class="name">Sim</div>
        <div class="date">2020/2/23(Wed) 12:43:24</div>
      </div>
      <div class="lower-message">
        <div class="text">おはよう</div>
      </div>
    </div>
  </div> 
  <%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
    <div class="left-form">
      <%= f.text_field :content, class: "input", placeholder: "type a message" %>
      <label class="form-image">
        <span class="image-file">画像</span>
        <%= f.file_field :image, class: "hidden" %>
      </label>
    </div>
    <div class="right-form">
      <%= f.submit '送信', class: "send" %>
    </div>
  <% end %>
</div>
