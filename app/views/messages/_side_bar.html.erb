<div class="side-bar">
  <div class="side-bar-header">
    <%= link_to current_user.name, edit_user_path(current_user),class: "user-name" %>
    <%= link_to "チャットを作成する", new_room_path,class: "create-room" %>
  </div>
  <div class="rooms">
    <% current_user.rooms.each do |room| %>
      <div class="room">
        <div class="room-name">
           <a href="#"><%= room.name %></a>
        </div>
      </div>
    <% end %>
  </div>
</div>